<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myfirstapp.billys.tictactoe.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:text="@string/btnMehrspieler"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMehrspieler"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btnEinzelspieler"
        android:layout_alignStart="@+id/btnEinzelspieler" />

    <Button
        android:text="@string/btnLeicht"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLeicht"
        android:visibility="invisible"
        android:layout_marginTop="115dp"
        android:layout_below="@+id/txtUserName"
        android:layout_alignStart="@+id/btnEinzelspieler" />

    <Button
        android:text="@string/btnSchwierig"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSchwer"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/btnMehrspieler"
        android:layout_alignBottom="@+id/btnMehrspieler"
        android:layout_alignStart="@+id/btnMehrspieler" />

    <Button
        android:text="@string/button_Einzelspieler"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEinzelspieler"
        android:layout_alignBaseline="@+id/btnLeicht"
        android:layout_alignBottom="@+id/btnLeicht"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:textSize="14sp"
        android:layout_below="@+id/btnMehrspieler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

    <TextView
        android:text="Willkommen ....(USER-NAME)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserName"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>
